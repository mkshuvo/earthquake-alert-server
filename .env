# Database Configuration
MONGODB_URI=mongodb://root:root@localhost:27017/earthquake-db?authSource=admin

# RabbitMQ Configuration
RABBITMQ_URL=amqp://rabbit:rabbit@localhost:5672
RABBITMQ_EXCHANGE=earthquake_exchange
RABBITMQ_QUEUE=earthquake_queue

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_TOPIC=earthquakes/alerts

# API Configuration
USGS_API_URL=https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary/all_hour.geojson
API_RATE_LIMIT_MS=30000

# Server Configuration
PORT=6000
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Application Settings
EARTHQUAKE_FETCH_INTERVAL=30000
MIN_MAGNITUDE_ALERT=4.0
MAX_EARTHQUAKES_PER_FETCH=10
